<assembly>
    <id>slave</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/apache-tomcat-${tomcat.version}</directory>
            <outputDirectory>apache-tomcat-${tomcat.version}</outputDirectory>
            <excludes>
                <exclude>conf/tomcat-users.xml</exclude>
                <exclude>conf/config.properties</exclude>
                <exclude>conf/config.sh</exclude>
                <exclude>bin/setenv.sh</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/../profiles/${build.profile.id}/tomcat-users.xml</source>
            <outputDirectory>/apache-tomcat-${tomcat.version}/conf/</outputDirectory>
            <fileMode>0775</fileMode>
        </file>
        <file>
            <source>${basedir}/../profiles/${build.profile.id}/config.properties</source>
            <outputDirectory>/apache-tomcat-${tomcat.version}/conf/</outputDirectory>
            <fileMode>0775</fileMode>
        </file>
        <file>
            <source>${basedir}/../profiles/${build.profile.id}/config.sh</source>
            <outputDirectory>/apache-tomcat-${tomcat.version}/conf/</outputDirectory>
            <fileMode>0777</fileMode>
        </file>
        <file>
            <source>${basedir}/../profiles/${build.profile.id}/setenv.sh</source>
            <outputDirectory>/apache-tomcat-${tomcat.version}/bin/</outputDirectory>
            <fileMode>0777</fileMode>
        </file>
        <file>
            <source>${project.build.directory}/search-slave.war</source>
            <outputDirectory>/apache-tomcat-${tomcat.version}/webapps/</outputDirectory>
            <destName>search.war</destName>
            <fileMode>0777</fileMode>
        </file>
    </files>
</assembly>

