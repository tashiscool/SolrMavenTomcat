<?xml version="1.0" encoding="UTF-8" ?>
<!-- All (relative) paths are relative to the installation path persistent: 
    Save changes made via the API to this file sharedLib: path to a lib directory 
    that will be shared across all cores -->
    
<solr persistent="false" sharedLib="../../lib">
    <!-- adminPath: RequestHandler path to manage cores. If 'null' (or absent), cores will not be manageable via request handler -->
    <cores adminPath="/admin/cores">
        <core name="product" instanceDir="product" dataDir="${solr.data.dir:/opt/app}/search/product" properties="../../../conf/config.properties" />
    </cores>
</solr>
